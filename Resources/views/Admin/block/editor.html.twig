{% block stylesheets %}
    <link rel="stylesheet" href="/bundles/anhcontentblock/components/codemirror/lib/codemirror.css" />
    <style>
.CodeMirror {
    line-height: 1.3;
    color: #333;
    border: 1px solid silver;
}
    </style>
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@jquery_js'
    %}<script src="{{ asset_url }}"></script>{% endjavascripts %}
    <script src="/bundles/anhcontentblock/components/codemirror/lib/codemirror.js"></script>
    <script src="/bundles/anhcontentblock/components/codemirror/mode/xml/xml.js"></script>
    <script src="/bundles/anhcontentblock/components/codemirror/mode/javascript/javascript.js"></script>
    <script src="/bundles/anhcontentblock/components/codemirror/mode/css/css.js"></script>
    <script src="/bundles/anhcontentblock/components/codemirror/mode/htmlmixed/htmlmixed.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            CodeMirror.fromTextArea($('#anh_content_block_block_content').get(0), {
                lineNumbers: true,
                mode: "htmlmixed"
            });
        });
    </script>
{% endblock %}
